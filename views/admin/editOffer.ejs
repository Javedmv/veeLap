    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const form = document.getElementById('offer-form');
          form.addEventListener('submit', function (event) {
            event.preventDefault();
      
            // Validate form before submission
            if (validateForm()) {
              const offerId = document.getElementById('offerId').value;
              const offerType = document.getElementById('offerType').value;
              const offerName = document.getElementById('offerNameId').value;
              const discountPercentage = document.getElementById('discountPercentage').value;
              const status = document.getElementById('status').value;
              const startDate = document.getElementById('startDate').value;
              const endDate = document.getElementById('endDate').value;

              const jsonData = {
                offerId,
                offerType,
                productId:offerName,
                discountPercentage,
                status,
                startDate,
                endDate
              };
      
              // Continue with form submission (fetch request)
              fetch('/admin/postEdit-offer', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify(jsonData),
              })
                .then(response => response.json())
                .then(async(data) => {
                  if (data.error) {
                    Swal.fire({
                      icon: 'error',
                      title: 'Error',
                      text: data.error,
                      showConfirmButton: false,
                      timer: 1500,
                    });
                  } else {
                    await Swal.fire({
                      icon: 'success',
                      title: 'Success',
                      text: data.message,
                      showConfirmButton: false,
                      timer: 1500,
                    });
                    
                    window.location.href = '/admin/view-offer-management';
                  }
                })
                .catch(error => {
                  Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to communicate with the server. Please try again.',
                    showConfirmButton: false,
                    timer: 1500,
                  });
                  console.error("Error:", error);
                });
            }
        });
      
          function validateForm() {
            // Validate each field
            const offerType = document.getElementById('offerType').value;
            const offerName = document.getElementById('offerNameId').value;
            const discountPercentage = document.getElementById('discountPercentage').value;
            const status = document.getElementById('status').value;
            const startDate = document.getElementById('startDate').value;
            const endDate = document.getElementById('endDate').value;
      
            if (!offerType || !offerName || !discountPercentage || !status || !startDate || !endDate) {
              Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'All fields are required.',
                showConfirmButton: false,
                timer: 1500,
              });
              return false;
            }
      
            // Validate discount percentage range
            if (discountPercentage < 0 || discountPercentage > 100) {
              Swal.fire({
                icon: 'error',
                title: 'Validation Error',
                text: 'Discount percentage must be between 0 and 100.',
                showConfirmButton: false,
                timer: 1500,
              });
              return false;
            }
      
            return true;
          }
        });
      </script>
