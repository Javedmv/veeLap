      <script>
document.addEventListener("DOMContentLoaded", () => {
    const submitBtn = document.getElementById("submitBtn");
    const invalidMessage = document.getElementById("messag");
    const form = document.getElementById("formedit");

    form.addEventListener("submit", async (event) => {
        event.preventDefault(); // Move this line to the beginning to prevent the default form submission

        const updatedName = document.getElementById("catgName").value;
        if (updatedName === "" || !validationName(updatedName)) {
            invalidMessage.style.display = "block";
        } else {
            try {
                const categoryname = document.getElementById("catgName").value;
                const categoryId = submitBtn.getAttribute("categoryid");
                const response = await fetch("/admin/post-edit-category", {
                    method: "post",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        newCatgName: categoryname,
                        categoryID: categoryId,
                    }),
                });

                const data = await response.json();

                if (response.ok) {
                    Swal.fire({
                        position: "top-center",
                        icon: "success",
                        title: "Done",
                        text: data.message,
                        showConfirmButton: false,
                        timer: 2000,
                    });
                } else {
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: data.message,
                        showConfirmButton: false,
                        timer: 2000,
                    });
                }
            } catch (error) {
                console.error("Error in fetch:", error);
            }
        }
    });
});

function validationName(name) {
    const Pattern = /^[^\d]+$/;
    return Pattern.test(name);
}

