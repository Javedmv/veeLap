  <body>
    <main>
      <section class="content-main mt-80 mb-80">
        <div class="card mx-auto card-login">
          <div class="card-body">
            <h4 class="card-title mb-4">Sign in</h4>
            <form method="post" action="/admin/verifyAdmin" id="adminForm">
              <div class="mb-3">
                <input
                  class="form-control"
                  placeholder="email"
                  type="text"
                  name="email"
                  id="email"
                  required
                />
              </div>
              <!-- form-group// -->
              <div class="mb-3">
                <input
                  class="form-control"
                  placeholder="Enter Password"
                  type="password"
                  name="password"
                  id="password"
                  required
                />
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="checkbox"
                  value=""
                  id="showPassword"
                  onchange="togglePassword()"
                />
                <label class="form-check-label" for="showPassword">
                  Show Password
                </label>
              </div>
              <div><br /></div>
              <!-- form-group// -->
