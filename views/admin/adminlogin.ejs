              <!-- form-group form-check .// -->
              <div class="mb-4">
                <button type="submit" class="btn btn-primary w-100">
                  Login
                </button>
              </div>
              <div>
                <%if(typeof message !== "undefined"){%>
                <p style="color: red" id="errormsg"><%=message%></p>
                <%}%>
