    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const saveBtn = document.getElementById("SaveBtn");
        const orderId = saveBtn.getAttribute("orderId");

        saveBtn.addEventListener("click", async function () {
          const statusSelect = document.querySelector(".statusSelect").value;
          // console.log(statusSelect);

          if (statusSelect) {
            Swal.fire({
              title: "Are you sure?",
              text: "Please click on 'Yes' to change the status of the product delivery!",
              icon: "warning",
              showCancelButton: true,
              confirmButtonColor: "#3085d6",
              cancelButtonColor: "#d33",
              confirmButtonText: "Yes, Change it!",
            })
              .then(async function (result) {
                if (result.isConfirmed) {
                  // console.log(statusSelect);
                  const response = await fetch(
                    `/admin/change-order-status?orderStatus=${statusSelect}&orderId=${orderId}`
                  );

                  if (!response.ok) {
                    throw new Error(`HTTP error! Status: ${response.status}`);
                  }

                  return response.json();
                }
              })
              .then((data) => {
                if (data.success) {
                  Swal.fire({
                    position: "top-center",
                    icon: "success",
                    title: "Done",
                    text: data.message,
                    showConfirmButton: false,
                    timer: 2000,
                  }).then(() => {
                    window.location.href = `/admin/order/details-page/${orderId}`;
                  });
                } else {
                  Swal.fire({
                    position: "top-center",
                    icon: "error",
                    title: data.message,
                    text: data.detail || "",
                    showConfirmButton: false,
                  });
                }
              })
              .catch((error) => {
                console.error("An error occurred:", error);
                Swal.fire({
                  position: "top-center",
                  icon: "error",
                  title: "Error",
                  text: "An error occurred while processing your request.",
                  showConfirmButton: false,
                });
              });
          }
        });
      });
    </script>

