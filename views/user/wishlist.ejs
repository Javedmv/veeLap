  <main class="main">
    <div class="page-header breadcrumb-wrap">
      <div class="container">
        <div class="breadcrumb">
          <a href="index.html" rel="nofollow">Home</a>
          <span></span> Wishlist
        </div>
      </div>
    </div>
    <section class="mt-50 mb-50">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="table-responsive">
              <table class="table shopping-summery text-center">
                <% if (wishlist && wishlist.products && wishlist.products.length
                > 0) { %>
                <thead>
                  <tr class="main-heading">
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Action</th>
                    <th>Remove</th>
                  </tr>
                </thead>
                <tbody>
                  <%wishlist.products.forEach((product)=>{%>
                  <tr>
                    <td class="image product-thumbnail">
                      <img
                        src="<%=product.productId.images[0]?.path%>"
                        alt="image"
                      />
                    </td>
                    <td class="product-des product-name" width="48%">
                      <h5 class="product-name">
                        <a href=""><%=product.productId.productName%></a>
                      </h5>
                      <p class="font-xs"><%=product.productId.description%></p>
                    </td>
                    <td class="price" data-title="Price">
                      <span><%=product.productId.salesPrice%></span>
                    </td>
                    <td class="text-center" data-title="Stock">
                      <span class="color3 font-weight-bold"
                        ><%=product.productId.status%></span
                      >
                    </td>
                    <td class="text-right" data-title="Cart">
                      <%if(product.productId.stock > 0){%>
                      <button
                        class="btn btn-sm addToCart"
                        wishlistId="<%= product.id%>"
                        productId="<%= product.productId._id%>"
                      >
                        <i class="fi-rs-shopping-bag mr-5"></i>Add to cart
                      </button>
                      <%}else{%>
                      <p>product out of stock</p>
                      <%}%>
                    </td>
                    <td class="action" data-title="Remove">
                      <a href="/user/delete-product?product=<%=product.id%>"
                        ><i class="fi-rs-trash btn btn-sm"></i
                      ></a>
                    </td>
                  </tr>
                  <%})%>
                </tbody>
                <%}else{%>
                <div>
                  <p class="text-center text-info d-block">Wishlist is empty</p>
                  <div
                    class="d-flex align-items-center justify-content-center mt-20"
                  >
                    <a class="btn text-center" href="/user/"
                      >Continue Shopping</a
                    >
                  </div>
                </div>

                <%}%>
              </table>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const addToCartBtn = document.querySelectorAll(".addToCart");
      addToCartBtn.forEach((button) => {
        button.addEventListener("click", async function (event) {
          event.preventDefault();
          const wishlistId = button.getAttribute("wishlistId");
          const productId = button.getAttribute("productId");
          await fetch(
            `/user/add-to-cart-wishlist?wishlistId=${wishlistId}&productId=${productId}`,
            {
              method: "post",
            }
          )
            .then((response) => response.json())
            .then((data) => {
              if (data.message) {
                Swal.fire({
                  title: "Success",
                  text: data.message,
                  icon: "success",
                  confirmButtonText: "Ok",
                  timer: 1500,
                  timerProgressBar: true,
                });
              }
              setTimeout(() => {
                window.location.href = "/user/load-wishlist";
              }, 1500);
            })
            .catch((error) => {
              Swal.fire({
                title: "Sorry!",
                text: error,
                icon: "error",
                confirmButtonText: "Ok",
                timer: 2000,
                timerProgressBar: true,
              });
            });
        });
      });
    });
  </script>

