<main class="main">
  <section class="mt-50 mb-50">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div
            class="tab-pane"
            id="orders"
            role="tabpanel"
            aria-labelledby="orders-tab"
          >
            <div class="card">
              <div class="card-header">
                <h5 class="mb-0">Your Orders</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table">
                    <thead>
                      <tr>
                        <th class="text-center">Photo</th>
                        <th class="text-center">Reference Id</th>
                        <th class="text-center">Product</th>
                        <th class="text-center">
                          Order placed<i class="text-secondary"> (date)</i>
                        </th>
                        <th class="text-center">Status</th>
                        <th class="text-center">PaymentStatus</th>
                        <th class="text-center">PaymentMethod</th>
                        <th class="text-center">Total</th>
                        <!-- <th>Action</th> -->
                      </tr>
                    </thead>
                    <tbody>
                      <% if (!orderDetails || orderDetails.length === 0) { %>
                      <h6 class="text-center" style="font-size: large">
                        No orders
                      </h6>
                      <% } else { %> <% orderDetails.products.forEach((item) =>
                      { %>

                      <tr>
                        <td class="text-center">
                          <img
                            src="<%= item.productId.images[0]?.path  %>"
                            class="img-sm"
                            alt="Item"
                            height="68"
                            width="68"
                          />
                        </td>
                        <td class="text-center">
                          <%= orderDetails.referenceId %>
                        </td>
                        <td class="text-center">
                          <%= item.productId.productName %>
                        </td>
                        <td class="text-center">
                          <%= orderDetails.createdAt.toLocaleDateString() %>
                        </td>
                        <td class="text-center">
                          <span
                            class="badge rounded-pill alert-<%= orderDetails.orderStatus === 'Order Placed' ? 'dark' : orderDetails.orderStatus === 'Shipped' ? 'warning' : orderDetails.orderStatus === 'Delivered' ? 'success' : orderDetails.orderStatus === 'Cancelled' ? 'danger' : orderDetails.orderStatus === 'Returned'? 'secondary' : '' %>"
                          >
                            <%= orderDetails.orderStatus %>
                          </span>
                        </td>
                        <td class="text-center">
                          <span
                            class="badge rounded-pill alert-<%= orderDetails.paymentStatus === 'Success' ? 'success' : orderDetails.paymentStatus === 'Pending' ? 'warning' : orderDetails.paymentStatus === 'Failed' ? 'danger' : '' %>"
                          >
                            <%= orderDetails.paymentStatus %>
                          </span>
                        </td>
                        <td class="text-center">
                          <%= orderDetails.paymentMethod %>
                        </td>
                        <td class="text-center">
                          ₹<%= item.price * item.quantity %> for <%=
                          item.quantity%> item
                        </td>
                      </tr>

                      <% }); %>
                    </tbody>
                  </table>
                  <div>
                    <h5 class="d-flex justify-content-end p-10">
                      Total Amount: ₹ <%= orderDetails.totalAmount %>
                    </h5>
                    <h5 class="d-flex justify-content-end p-10">
                      Order Status: <%= orderDetails.orderStatus %>
                    </h5>
                  </div>

                  <div class="d-flex justify-content-center align-items-center">
                    <div class="mx-3">
                      <%console.log( orderDetails._id)%>
                      <a
                        href="/user/cancel-order/<%= orderDetails._id%>"
                        class="btn btn-sm"
                        style="background-color: #e10f0f; border: #e10f0f"
                        >Cancel Order</a
                      >
                    </div>

                    <div class="mx-3">
                      <a href="/user/" class="btn btn-sm">Continue Shopping</a>
                    </div>
                  </div>

                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
