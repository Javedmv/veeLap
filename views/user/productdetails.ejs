              event.preventDefault();
              const productId = element.getAttribute("prdctId");
              try {
                const response = await axios.post(`/user/add-to-wishlist?productId=${productId}`)
                const data = response.data
                if(data){
                  Swal.fire({
                  title:(data.message)?'success':'Sorry',
