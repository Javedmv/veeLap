                  timer: 1500,
                  timerProgressBar: true,
                });
                }
              } catch (error) {
                Swal.fire({
                title: "Sorry!",
                text: error,
                icon: "error",
                confirmButtonText: "Ok",
                timer: 2000,
                timerProgressBar: true,
                })
              }
              
            }) 
          })
