  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const grandTotal = document.querySelector(".grandTotal").textContent;

      document
        .querySelector(".place-order-cod")
        .addEventListener("click", async (event) => {
          const selectedAddressRadioButtons =
            document.querySelectorAll(".selected-address");
          let selectedAddressValue = null;

          for (let radioButton of selectedAddressRadioButtons) {
            if (radioButton.checked) {
              selectedAddressValue = radioButton.value;

              await fetch(
                `/user/placeorder/cod?addressId=${selectedAddressValue}&grandTotal=${grandTotal}`,
                {
                  method: "post",
                  body: JSON.stringify({ addressId: selectedAddressValue }),
                  headers: {
                    "Content-Type": "application/json",
                  },
                }
              )
                .then((response) => response.json())
                .then((data) => {
                  console.log("this is resposnse if data");
                  if (data.codOutOfStock) {
                    console.log("Out of stock");
                    Swal.fire({
                      position: "top-center",
                      icon: "error",
                      title:
                        " Product is Out of stock. Please check your cart..!",
                      showConfirmButton: false,
                      timer: 1500,
                    });
                    setTimeout(() => {
                      window.location.href = "/user/load-cart";
                    }, 1500);
                  } else {
                    console.log("Order placed successfully");
                    Swal.fire({
                      position: "top-center",
                      icon: "success",
                      title: "Order placed successfully",
                      showConfirmButton: false,
                      timer: 1500,
                    });
                    setTimeout(() => {
                      console.log("inside the setTimeout");
                      window.location.href = "/user/order/success";
                    }, 1500);
                  }
                })
                .catch((error) => {
                  console.log(error);
                });
            }
            if (selectedAddressValue !== null) {
              console.log("Selected Address ID:", selectedAddressValue);
            } else {
              Swal.fire({
                icon: "error",
                title: "Oops...",
                text: "No Address is Selected!",
              });
            }
          }
        });
    });
  </script>

